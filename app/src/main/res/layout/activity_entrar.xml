<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background_degrade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EntrarActivity">

    <ImageView
        android:id="@+id/imgLogoEntrar"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/login_ico"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/txtLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:fontFamily="@font/hero_regular"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:drawableTint="@color/colorPrimary"
        android:drawablePadding="8dp"
        android:background="@drawable/edit_text_custom"
       />

    <EditText
        android:id="@+id/txtLoginSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:fontFamily="@font/hero_regular"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawableTint="@color/colorPrimary"
        android:drawablePadding="8dp"
        android:background="@drawable/edit_text_custom"
        />

    <com.flod.loadingbutton.LoadingButton
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInfo"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="75dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:text="ENTRAR"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/hero_bold"
        android:background="@drawable/button_transp_round"
        app:endCompleteDrawable="@drawable/ic_successful"
        app:endFailDrawable="@drawable/ic_fail"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgFundoMontanha1Login"
            android:layout_width="407dp"
            android:layout_height="222dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/fundo_montanha2" />

        <ImageView
            android:id="@+id/imgFundoBarraca1Login"
            android:layout_width="189dp"
            android:layout_height="143dp"
            android:src="@drawable/fundo_barraca3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.774"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imgFundoFogueiraLogin"
            android:layout_width="107dp"
            android:layout_height="40dp"
            android:src="@drawable/fundo_fogueira"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imgFundoArvore1Login"
            android:layout_width="141dp"
            android:layout_height="129dp"
            android:src="@drawable/fundo_arvore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imgFundoArvore2Login"
            android:layout_width="141dp"
            android:layout_height="129dp"
            android:src="@drawable/fundo_arvore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>